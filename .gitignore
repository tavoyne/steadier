# This file follows a whitelist approach rather than a traditional blacklist one.
# In order for files to be tracked, they must be targeted explicitly.

# Ignore everything
*

# Files tracked everywhere
!.eslintrc.cjs
!.gitignore

# Root
!/.pnp.cjs
!/.prettierignore
!/.yarnrc.yml
!/LICENSE
!/package.json
!/README.md
!/yarn.lock

# GitHub
!/.github
!/.github/workflows
!/.github/workflows/*.yml

# VSCode
!/.vscode
!/.vscode/extensions.json
!/.vscode/settings.json

# Yarn
!/.yarn
!/.yarn/cache
!/.yarn/cache/**/*
!/.yarn/patches
!/.yarn/patches/**/*
!/.yarn/plugins
!/.yarn/plugins/**/*
!/.yarn/releases
!/.yarn/releases/**/*
!/.yarn/sdks
!/.yarn/sdks/**/*
!/.yarn/versions
!/.yarn/versions/**/*

# Packages
!/packages
!/packages/**/
!/packages/**/*.cjs
!/packages/*/LICENSE
!/packages/*/package.json
!/packages/*/README.md
